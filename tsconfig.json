{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": ["webpack-env", "chai", "jest"],
        "paths": {
            "@/*": ["src/*"]
        },
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": ["node_modules"]
}
